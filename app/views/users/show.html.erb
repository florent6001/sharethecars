<div class="container-fluid mt-5">
  <div class="row">
    <div class="col-md-3">
      <div class="card shadow">
        <div class="card-header">
          <h5 class="card-title m-0 text-white">Mes informations</h5>
        </div>
        <% if @user.avatar.attached? %>
          <%= cl_image_tag(@user.avatar.key, class: 'card-img-top', crop: :fill, gravity: :face, alt: "Avatar of " + @user.first_name) %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title text-center"><%= @user.first_name %> <%= @user.last_name %></h5>
          <hr>
          <p class="card-text" style="line-height: 1.7em">
            <i class="fas fa-envelope me-2"></i><%= @user.email %><br />
            <i class="fas fa-phone me-2"></i><%= @user.phone_number %><br />
            <i class="fas fa-building me-2"></i><%= @user.company.name if @user.company %><br />
            <i class="fas fa-calendar-alt me-2"></i>Membre depuis : <%= @user.created_at.strftime("%d/%m/%Y") %>
          </p>
          <hr>
          <p class="card-text"><strong>Biographie:</strong> <%= @user.bio %></p>
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <div class="card shadow mb-3">
        <div class="card-header">
          <h5 class="card-title m-0 text-white">Derniers commentaires sur mes r√©servations</h5>
        </div>
        <div class="card-body">
          <% @feedbacks.each do |feedback| %>
            <div class="notification box-shadow border p-3 mb-2 align-items-start">
              <div class="col-md-2">
                <%= link_to car_path(feedback.reservation.car) do %>
                  <%= cl_image_tag(feedback.reservation.car.photo.key, class: "img-fluid rounded w-100", width: 100) if feedback.reservation.car.photo.attached? %>
                <% end %>
              </div>
              <div class="notification-content ml-3">
                <p><strong><%= feedback.reservation.car.model %></strong></p>
                <p><%= feedback.comment %></p>
                <p><small>Il y a <%= time_ago_in_words(feedback.created_at) %></small></p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
