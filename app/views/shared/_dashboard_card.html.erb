<div class="col-md-3">
  <div class="dashboard-card border-<%= color %>">
    <div class="dashboard-card-body">
      <div class="row no-gutters align-items-center">
        <div class="col-auto mx-3">
          <i class="fas fa-<%= icon %> dashboard-icon"></i>
        </div>
        <div class="col m-2">
          <div class="dashboard-card-title text-<%= color %>">
            <%= text %>
          </div>
          <div class="dashboard-card-stats"><%= value %></div>
        </div>
      </div>
    </div>
  </div>
</div>
