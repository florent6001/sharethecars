<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container">
    <img src="https://gif.toutimages.com/images/transports/voitures/voiture_045.gif" class="car-gif" alt="Voiture animée">
    <%= link_to root_path, class: "navbar-brand" do %>
      ShareTheCars
    <% end %>
    <% if user_signed_in? %>
      <div class="welcome-message d-flex align-items-center mt-2">
        <h4 class="welcome-perso p-2"><strong>Bienvenue,</strong></h4>
        <h4> <strong> <%= current_user.first_name %> <%= current_user.last_name %></strong>!</h4>
      </div>
    <% end %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to dashboard_path, class: "nav-link" do %>
              <span class="btn btn-primary">Accéder à mon tableau de bord</span>
            <% end %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Créer un compte", new_user_registration_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Se connecter", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
