<% feedbacks.each do |feedback| %>
  <div class="notification box-shadow border">
    <% if current_user.avatar.attached? %>
      <%= cl_image_tag(current_user.avatar.key, crop: :fill, gravity: :face, class: "avatar-large") %>
    <% else %>
      <%= image_tag 'avatar.png', class:"avatar-large", width: 300 %>
    <% end %>
    <div class="notification-content">
      <p><small><%= feedback.reservation.user.first_name %> <%= feedback.reservation.user.last_name %></small></p>
      <p><%= feedback.comment %></p>
      <p><small>Il y a</small>  <%= time_ago_in_words(feedback.created_at) %></p>
    </div>
  </div>
<% end %>
