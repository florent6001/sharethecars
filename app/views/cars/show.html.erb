<div class="container-fluid">
  <div class="mt-3">
    <div class="row">
      <div class="col-md-7">
        <div class="card bg-white rounded rounded-4">
          <%= cl_image_tag(@car.photo.key, class: "w-100") %>
        </div>
        <div class="card-body p-3">
          <h1 class="card-title">
            <p><%= @car.model %></p>
          </h1>
          <div class="d-flex gap-3 mt-2">
            <span><i class="fas fa-palette"></i> <%= @car.color %></span><br>
            <span><i class="fas fa-rectangle-ad"></i> <%= @car.plate_number %></span><br>
          </div>
          <%= link_to cars_path, class: "btn btn-primary mt-3" do %>
            <i class="fa-solid fa-arrow-left"></i> Liste des voitures
          <% end %>
        </div>
        <div class="mt-4">
          <h2>Derniers commentaires</h2>
          <%= render "feedbacks/index", feedbacks: @car.feedbacks %>
        </div>
      </div>
      <div class="col-md-5">
      </div>
    </div>
  </div>
</div>
