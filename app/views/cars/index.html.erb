<div class="container">
  <div class="row mt-4">
    <div class="d-flex justify-content-between align-items-center">
      <div class="text-center w-100">
        <h2 class="mb-0">[<%= @company.name %>]</h2>
        <h1>Voitures disponibles pour les employ√©s</h1>
      </div>
    </div>
    <% @cars.each do |car| %>
      <div class="col-12 col-lg-4">
        <%= link_to car_path(car), class:"text-decoration-none text-black" do %>
          <div class="card-trip">
            <img src="https://thegoodlife.fr/wp-content/uploads/sites/2/2022/11/the-good-life-voitures-de-luxe-marques-reticentes-vignette_3744x2400.jpg">
            <div class="card-trip-infos">
              <div>
                <h2 class="fs-5"><%= car.model %></h2>
                <div class="d-flex gap-3 mt-2">
                  <span><i class="fas fa-palette"></i> <%= car.color %></span><br>
                  <span><i class="fas fa-car-side"></i> <%= car.plate_number %></span><br>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
