<div class="container-fluid">
  <div class="row mt-4">
    <div class="d-flex justify-content-between align-items-center">
      <h1>Voitures disponibles pour les employ√©s de <%= @user_company.name %></h1>
    </div>
    <% @cars.each do |car| %>
      <div class="col-12 col-lg-3">
        <%= link_to car_path(car), class:"text-decoration-none text-black" do %>
          <div class="card-trip">
            <%= cl_image_tag(car.photo.key, class: "w-100") %>
            <div class="card-trip-infos">
              <div>
                <h2 class="fs-5"><%= car.model %></h2>
                <div class="d-flex gap-3 mt-2">
                  <span><i class="fas fa-palette"></i> <%= car.color %></span><br>
                  <span><i class="fas fa-rectangle-ad"></i> <%= car.plate_number %></span><br>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
